{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,

    "name": "Batch Media Saver from Instagram™",
    "description": "Downloads all Instagram™ media in best quality",
    "version": "4.1",

    "icons": {
        "128": "imgs/128.png"
    },

     "content_scripts": [
        {
          "run_at": "document_start",
          "matches": ["https://www.instagram.com/"],          
          "js": [ 
              "js/rhx_gis.js",   
              "js/jquery-3.1.1.min.js",              
              "js/moment.js",
              "js/zip.js",
              "js/z-worker.js",
              "js/deflate.js"
          ]
        }
    ],    
    "permissions": [
        "https://www.instagram.com/", "webRequest","webRequestBlocking", "activeTab", "storage"
    ],
    "browser_action": {
		"default_icon": "imgs/128.png",
        "default_popup": "popup.html"
	},
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "js/z-worker.js",
        "js/patch-worker.js",
        "js/deflate.js"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true  
    }
}

